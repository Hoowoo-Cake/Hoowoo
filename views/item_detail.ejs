<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>회원가입</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  <style>
    #form3Example1cg,
    #form3Example3cg,
    #form3Example4cg {
      font-size: 16px;
    }
  </style>
</head>

<body>
  <%- include('nav.html') %>
    <section class="mt-3" style="background-color: #fff;">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">케이크 디테일</h2>

                <p>이름 : <%=ITEM.name%></p>
                <p>설명 : <%=ITEM.detail%></p>
                <p>가격 : <%=ITEM.price%></p>
                <p>배송 : <%=ITEM.delivery%></p>
                <% if(ITEM.pickupHour){%>
                  <p>픽업 : <%=ITEM.pickupHour%></p>
                <%}%>
                <p>종류 : <%=ITEM.kindOf%></p>
                <p>색상 : <%=ITEM.color%></p>
                <p>맛 : <%=ITEM.flavor%></p>
                <p>크기 : <%=ITEM.size%></p>
                <p>위치 : <%=ITEM.address%></p>
                <p>수량 : <%=ITEM.stock%></p>
                <p>상태 : <%=ITEM.status%></p>
                <p>등록 날짜 : <%=ITEM.regDate%></p>
                <p class="address" style="display: none;"><%=ITEM.address%></p>
                <div id="map" style="width:100%;height:350px;"></div>
                <% if (ITEM.img1 !=null) { %>
                  <img src="../../uploads/<%= ITEM.img1 %>" width="500">
                <% } %>
                <% if (ITEM.img2 !=null) { %>
                  <img src="../../uploads/<%= ITEM.img2 %>" width="500">
                <% } %>
                <% if (ITEM.img3 !=null) { %>
                  <img src="../../uploads/<%= ITEM.img3 %>" width="500">
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=b07c2f01998df03ce2bb9f16879c49ab"></script>
  <script>
    const ADDRESS = document.querySelector('.address').innerText;
    const ARR_ADDRESS = ADDRESS.split(', ');
    console.log(parseInt(ARR_ADDRESS[0]), parseInt(ARR_ADDRESS[1]))
    var mapContainer = document.getElementById('map'), // 지도를 표시할 div 
      mapOption = {
        center: new kakao.maps.LatLng(parseFloat(ARR_ADDRESS[0]), parseFloat(ARR_ADDRESS[1])), // 지도의 중심좌표
        level: 3 // 지도의 확대 레벨
      };

    var map = new kakao.maps.Map(mapContainer, mapOption); // 지도를 생성합니다

    // 마커가 표시될 위치입니다 
    var markerPosition = new kakao.maps.LatLng(parseFloat(ARR_ADDRESS[0]), parseFloat(ARR_ADDRESS[1]));

    // 마커를 생성합니다
    var marker = new kakao.maps.Marker({
      position: markerPosition
    });

    // 마커가 지도 위에 표시되도록 설정합니다
    marker.setMap(map);

    // 아래 코드는 지도 위의 마커를 제거하는 코드입니다
    // marker.setMap(null);    
  </script>
</body>

</html>